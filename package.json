{
  "name": "swarm-markets-token",
  "version": "0.0.1",
  "description": "Swarm Markets Utility Token - SMT",
  "main": "index.js",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@chainlink/contracts": "^0.1.6",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "3.4.1-solc-0.7-2",
    "@openzeppelin/upgrades-core": "^1.5.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.2.15",
    "@types/fs-extra": "^9.0.8",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.3.4",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "fs-extra": "^9.1.0",
    "hardhat": "^2.12.5",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "husky": "^5.2.0",
    "i": "^0.3.6",
    "lint-staged": "^10.5.4",
    "npm": "^7.7.0",
    "ora": "^5.4.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "shelljs": "^0.8.4",
    "sol2uml": "^1.1.25",
    "solc-0.7": "npm:solc@^0.7.0",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "solidity-docgen": "^0.5.11",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:list-different",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:sol:fix": "yarn lint:sol --fix",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint:ts:fix": "yarn lint:ts --fix",
    "prettier:sol": "prettier --config .prettierrc --write \"contracts/**/*.sol\"",
    "prettier:ts": "prettier --config .prettierrc --write \"**/*.{js,ts}\"",
    "prettier:json:md": "prettier --config .prettierrc --write \"**/*.{json,md}\"",
    "prettier": "yarn prettier:sol && yarn prettier:ts",
    "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,sol,ts}\"",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "typechain": "hardhat typechain",
    "doc:uml": "sol2uml ./contracts -i mocks,test -f png -o ./docs/uml/swarm-markets-token.png",
    "docify": "node docify.js",
    "deploy:kovan": "hardhat run --network kovan scripts/deploy.ts",
    "verify:kovan": "hardhat run --network kovan scripts/verify.ts",
    "deploy:rinkeby": "hardhat run --network rinkeby scripts/deploy.ts",
    "verify:rinkeby": "hardhat run --network rinkeby scripts/verify.ts",
    "deploy:mainnet": "hardhat run --network mainnet scripts/deploy.ts",
    "verify:mainnet": "hardhat run --network mainnet scripts/verify.ts",
    "size": "hardhat size-contracts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "contracts/**/*.sol": [
      "yarn prettier:sol",
      "yarn lint:sol:fix"
    ],
    "**/*.{js,ts}": [
      "yarn prettier:ts",
      "yarn lint:ts:fix"
    ]
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0"
  }
}
