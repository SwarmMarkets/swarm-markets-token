{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "target": "es5"
  },
  "exclude": ["node_modules", "artifacts", "cache", ".git"],
  "include": [
    "scripts/**/*",
    "tasks/**/*",
    "test/**/*",
    "./utils/**/*",
    "typechain/**/*",
    "hardhat.config.ts",
    "./.eslintrc.yaml"
  ]
}
